<div class="container">

  <div class="formee-msg-info">
    <h3>Información importante</h3>
    <ul>
      <li>Los campos marcados con <em class="formee-req">*</em> son obligatorios.</li>
    </ul>
  </div>

  <% form_for :actividad, @actividad, :url => { :action => "save", :id => @actividad, :rfc => current_user.login }, :html => {:class => "formee", :name => "actividad"} do |f| -%>
  <fieldset>
    <legend>Registro&nbsp;de&nbsp;Actividades</legend>


   <div class="grid-1-12 clear"></div>
 
    <!-- fechahora -->
    <div class="grid-12-12">
      <label>Fecha/hora: <em class="formee-req">*</em></label>
      <%=f.text_field :fechahora%>
    </div>
    

    <!-- descripcion breve -->
    <div class="grid-12-12">
      <label>Descripción breve de la actividad (máximo 40 caracteres)</label>
       <!-- <=text_field :proyecto, :participa_programa%> -->
       <%=f.text_field :descripcion_corta%>
    </div>

   
   <!-- detalle -->
    <div class="grid-12-12">
      <label>Escriba el detalle de la actividad: <em class="formee-req">*</em></label>
      <%=f.text_area :detalles%>
    </div>

   
    <!-- submit -->
    <div class="grid-12-12">
      <input class="right" type="submit" onclick="to_uppercase();" title="GUARDAR ACTIVIDAD" value="GUARDAR ACTIVIDAD" />
    </div>

  </fieldset>

  <%end%>
</div>

